<div class="title-area">
    <h1><%= @category.name %></h1>
</div>

<div class="container">
    <div class="category-description">
    <p class="big"><%= @category.description %></p>
    <p class="centered low-contrast">Posted <%= time_ago_in_words(@category.created_at) %> ago</p>
    </div>
</div>
<div class="buttons-container">
    <%= link_to '<i class="lni lni-pencil-alt"></i>&emsp;Edit'.html_safe, edit_category_path(@category), class: "button button-solid" %>
    <%= link_to '<i class="lni lni-trash"></i>&emsp;Delete'.html_safe, @category,
        class: "button button-outline",
        method: :delete,
        data: { confirm: "Are you sure you want to delete this category? This action cannot be reversed." } %>
</div>