<%= form_with model: @task, local: true do |f| %>

    <p>
        <label>Task</label><br>
        <%= f.text_field :name, :placeholder => "Eat apple" %>
    </p>

    <p>
        <label>Category</label><br>
        <%= f.collection_select :category_id, Category.all, :id, :name, :prompt => "Assign a Category" %>
    </p>

    <p>
        <label>Notes (optional)</label><br>
        <%= f.text_area :description, :cols => 50, :rows => 8, :placeholder => "An apple a day keeps the doctor away" %>
    </p>

    <p>
        <%= f.submit class: "button button-solid" %>
    </p>

<% end %>