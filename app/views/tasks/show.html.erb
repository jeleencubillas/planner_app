<div class="title-area">
    <h1><%= @task.name %></h1>
</div>

<div class="container">
    <div class="task-description">
    <p class="big"><%= @task.description %></p>
    <p class="low-contrast">Due: <%= @task.due_date.to_formatted_s(:long) %></p>
    </div>
</div>
<div class="buttons-container">
    <%= link_to '<i class="lni lni-pencil-alt"></i>&emsp;Edit'.html_safe, edit_task_path(@task), class: "button button-solid" %>
    <%= link_to '<i class="lni lni-trash"></i>&emsp;Delete'.html_safe, @task,
        class: "button button-outline",
        method: :delete,
        data: { confirm: "Are you sure you want to delete this task? This action cannot be reversed." } %>
</div>